#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
ETC_DIR=$SCRIPT_DIR/../etc/fastdocker

fullpath=$1

if [ -z "$fullpath" ]; then
    echo "No filename supplied"
    exit 1
fi

if [ ! -f "$fullpath" ]; then
    echo "file $fullpath does not exist"
    exit 1
fi

filename=$(basename $1)

uuid=$(date | md5)
dir=/var/tmp/$uuid
mkdir "$dir"
echo "$dir"

cp "$ETC_DIR"/Dockerfile $dir/Dockerfile
cp "$1" "$dir"/"$filename"

docker build -t "$uuid" "$dir"
docker run -it "$uuid"
